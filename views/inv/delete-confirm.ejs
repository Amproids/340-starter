<h1><%- title %></h1>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
  </ul>
<% } %>
<form id="deleteForm" action="/inv/delete/<%= locals.inv_id %>" method="post">
    <fieldset>
        <legend>Delete Vehicle</legend>
        <p>Confirm Deletion - The delete is permanent.</p>

        <label for="invMake">Make:</label>
        <input type="text" id="invMake" name="inv_make" readonly value="<%= locals.inv_make %>">

        <label for="invModel">Model:</label>
        <input type="text" id="invModel" name="inv_model" readonly value="<%= locals.inv_model %>">

        <label for="invYear">Year:</label>
        <input type="number" id="invYear" name="inv_year" readonly value="<%= locals.inv_year %>">

        <label for="invPrice">Price:</label>
        <input type="number" id="invPrice" name="inv_price" readonly value="<%= locals.inv_price %>">

        <button type="submit">Delete Vehicle</button>
    </fieldset>
</form>