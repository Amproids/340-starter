<h1><%- title %></h1>
<%- messages() %>
<form id="loginForm" action="/account/login" method="post">
    <fieldset>
        <label for="accountEmail">Email:</label>
        <input type="email" name="account_email" id="accountEmail" required value="<%= locals.account_email %>">
              
        <label for="accountPassword">Password:</label>
        <input type="password" name="account_password" id="accountPassword" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        
        <div class="password-requirements">
            <% if (locals.errors) { %>
              <ul class="notice">
           <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <%  }) %>
              </ul>
            <% } %>
        </div>
        <button type="submit">Login</button>
        <p>No account? </p><a href="/account/register">Sign-up</a>
    </fieldset>
</form>